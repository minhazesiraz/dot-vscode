{
  /* Specifies the path to custom 'atDirectives' data file. */
  "css.customData": [".vscode/atDirectives.json"],

  /* Learn with Sumit Theme - Learn with Sumit */
  "workbench.colorTheme": "Learn with Sumit Theme - Dracula version",

  /* Symbols of VSCode - Minhaz E Siraz */
  "workbench.iconTheme": "Symbols of VSCode - Shades of Gray",

  "workbench.tree.indent": 16,

  /* Customizes colors for the activity bar. */
  "workbench.colorCustomizations": {
    //  "activityBar.background": "#84cc16",
    //  "activityBar.activeBackground": "#ffffff59",
    //  "activityBar.activeBorder": "#ffffff",
    //  "activityBar.foreground": "#ffffff",
    //  "activityBar.inactiveForeground": "#ffffffa6",
    "activityBarBadge.background": "#84cc16",
    "activityBarBadge.foreground": "#ffffffa6"
    //  "tab.activeBorderTop": "#84cc16"
  },

  /* GitLens - Git Supercharged (GitKraken) */
  "git.autofetch": true,

  /* Prettier - Code formatter (Prettier) */
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,

  /* Code Spell Checker - Street Side Software */
  "cSpell.userWords": ["Minhaz E Siraz"],

  /* Editor settings (Default, but also used by multiple extensions) */
  "editor.detectIndentation": false,
  "editor.insertSpaces": true,
  "editor.tabSize": 3,
  "editor.lineNumbers": "on",
  "editor.letterSpacing": 0,

  /* Disables breadcrumb navigation in the editor. */
  "breadcrumbs.enabled": false,

  /* ESLint - Microsoft */
  "eslint.options": {
    "configFile": ".eslintrc.json"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.tslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "eslint.run": "onSave",

  /* Editor font settings */
  "editor.fontFamily": "'JetBrains Mono', monospace",
  "editor.fontLigatures": true,
  "editor.fontWeight": "normal",
  "editor.fontSize": 14,
  "editor.wordWrap": "off",
  "editor.minimap.enabled": false,

  /* Customizes the appearance of comments. */
  "editor.tokenColorCustomizations": {
    "comments": "#9c9c9c",
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },

  /* Cursor settings */
  "editor.cursorSmoothCaretAnimation": "explicit",
  "editor.cursorBlinking": "expand",

  /* Emmet support for React files */
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },

  /* Automatically updates imports when files are moved */
  "javascript.updateImportsOnFileMove.enabled": "always",

  /* File associations */
  "files.associations": {
    "*.jsx": "javascriptreact",
    "*.js": "javascriptreact"
  },

  /* Path Intellisense - Christian Kohler */
  //   "path-autocomplete.extensionOnImport": true,
  //   "path-autocomplete.excludedItems": {
  //     "*/.js": {
  //       "when": "**"
  //     },
  //     "*/.jsx": {
  //       "when": "**"
  //     }
  //   },
  "path-intellisense.extensionOnImport": true,
  "path-intellisense.autoSlashAfterDirectory": true,
  "path-intellisense.showHiddenFiles": true,
  "path-intellisense.mappings": {
    "@components": "${workspaceFolder}/src/components",
    "@utils": "${workspaceFolder}/src/utils"
  },

  /* JavaScript and TypeScript validation (Disabled) */
  "javascript.validate.enable": false,
  "typescript.validate.enable": false,

  /* JavaScript and TypeScript import suggestions */
  "typescript.suggest.autoImports": true,
  "javascript.suggest.autoImports": true
}